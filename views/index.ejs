<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clinvas</title>
    <style>
      body {
        font-family: 'Arial', sans-serif;
        text-align: center;
        margin: 50px;
      }
      h1 {
        color: #333;
      }
      form {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin-top: 20px;
      }
      input {
        padding: 10px;
        margin-bottom: 10px;
        width: 300px;
      }
      button {
        padding: 10px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        cursor: pointer;
      }
      button:hover {
        background-color: #45a049;
      }
    </style>
  </head>
  <body>
    <div>
      <h1>Welcome to the Song Censorship App</h1>
      <form id="songForm" action="/process-song" method="post">
        <label for="songInput">Enter the Song Name or URL:</label>
        <input type="text" id="songInput" name="songInput" required />
        <button type="submit" onclick="processSong(event)">Submit</button>
      </form>
    </div>
    <div id="resultsContainer" ></div>
    <script>

      async function processSong(event){
        event.preventDefault();
        const songInput = document.getElementById("songInput").value;
        try {
          const res = await fetch("/process-song", {
            method:"POST",
            headers: {
              "Content-Type" : "application/json"
            },
            body: JSON.stringify({songInput})
          });
          const data = await res.json();
          console.log(`FrontEnd: ${data}`);
          displayResults(data?.results)
        } catch (error) {
          console.error(error);
        }
      }

      function displayResults(results){
        const resultsContainer = document.getElementById("resultsContainer");
        resultsContainer.innerHTML += "<h2>Song Results</h2>";

        if (results.length == 0){
          resultsContainer.innerHTML += "<p>No song found</p>";
        } else {
          results.forEach(result=>{
            const resultItem = document.createElement("p");
            resultItem.innerHTML += `<span class="result-link" data-title="${result.title}" data-artist="${result.artist}">${result.title} - ${result.artist}</span>`;
            resultsContainer.append(resultItem);
          });

          const resultLinks = document.querySelectorAll(".result-link");
          resultLinks.forEach(link=>{
            link.addEventListener("click", function(){
              const selectedTitle = this.getAttribute("data-title");
              const selectedArtist = this.getAttribute("data-artist");

              sendSelectedSong(selectedTitle, selectedTitle);
            });
          });
        }
      }

      async function sendSelectedSong(title, artist){
        try {
          const response = await fetch("/process-song", {
            method: "POST",
            headers: {
              "Content-Type" : "application/json"
            },
            body: JSON.stringify({title,artist})
          })
        } catch (error) {
          console.error(error);
        }
      }
    </script>
  </body>
</html>     
